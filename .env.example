# Port for Gradio web server
GRADIO_SERVER_PORT=7860

# Server name (used for network access)
GRADIO_SERVER_NAME=0.0.0.0

# Set to 'true' to enable sharing via Gradio temporary URL
ENABLE_SHARING=false

# Set to 'true' to automatically open browser when app starts
OPEN_BROWSER=true

# Default TTS model
DEFAULT_MODEL=tts_models/en/ljspeech/tacotron2-DDC

# Enable debug mode (set to 'true' for verbose output)
DEBUG=false

# Maximum text length (characters) to process at once
MAX_TEXT_LENGTH=500

# Cache directory for downloaded models (leave empty for default)
# This will be set as TTS_HOME environment variable
MODELS_CACHE_DIR=

# Directory where generated audio files will be saved
OUTPUT_DIR=output

# Logging configuration
# Available levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Optional log file path (leave empty to log to console only)
LOG_FILE=
